<% provide(:title, 'All users') %>
<% provide(:username, @user.first_name) %>
<% if current_user.admin? %>

<div class="span9">
  <ul class="breadcrumb">
    <li><%= link_to "Home", root_path %> <span class="divider">/</span></li>
    <li class="active">All users</li>
  </ul>
  <h3>Все пользователи</h3>
  <%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
      <li>
        <% if !current_user?(user) %>
        <%= link_to user.email, user %> | <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
      </li>
  <% end %>
</ul>
  <%= will_paginate %>
    </div>
<% end %>
