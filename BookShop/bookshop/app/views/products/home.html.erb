<% provide(:title, 'Home') %>
<div class="span9">
  <div class="well well-small">
    <h4>Featured Products</h4>
    <div class="row-fluid">
      <div id="featured" class="carousel slide">
        <div class="carousel-inner">
          <div class="item active">
            <ul class="thumbnails">
              <% count = 0 %>

            <% @products_for_featured.each do |product| %>
                  <% if count == 4 %>
                    <% break %>
                      <% else %>
                  <li class="span3">
                    <div class="thumbnail">
                      <i class="tag"></i>
                      <%= image_tag product.image_url, width: '150' %>
                      <div class="caption">
                        <h5><%= product.name %></h5>
                        <h4><%= link_to "VIEW", product, :class=>"btn btn-primary" %> <span class="pull-right"><%=product.price%></span></h4>
                      </div>
                    </div>
                  </li>
                      <% count+=1 %>

                  <% end %>
              <% end %>
            </ul>
          </div>
        </div>
        <a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
        <a class="right carousel-control" href="#featured" data-slide="next">›</a>
      </div>
    </div>
  </div>
  <%= will_paginate %>
  <ul class="thumbnails">
    <% if @products.nil? %>
            Книга не найдена!
<% else %>
    <% @products.each do |product| %>
        <%= render "product_row", product: product, order_item: @order_item %>
    <% end %>
    <% end %>

  </ul>
  <%= will_paginate %>

</div>